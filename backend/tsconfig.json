{
    "compilerOptions": {
      "allowJs": true,
      "rootDir": "src",
      "lib": [
        "es2017"
      ],
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "resolveJsonModule": true,
      "sourceMap": true,
      "target": "es2017",
      "outDir": "build",
      "module": "commonJS",
      "skipLibCheck": true,
      "strict": true,
      "strictNullChecks": true,              
      "strictFunctionTypes": true,
    }
}